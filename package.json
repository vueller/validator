{
  "name": "@vueller/validator",
  "version": "1.4.0",
  "description": "Modern universal validation library with Vue 3, JavaScript support, and upcoming React & Angular integrations",
  "main": "dist/validator.cjs.js",
  "module": "dist/validator.esm.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/validator.esm.js",
      "require": "./dist/validator.cjs.js"
    },
    "./vue": {
      "import": "./dist/validator-vue.esm.js"
    },
    "./locales": {
      "import": "./src/locales/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/vueller/validator.git"
  },
  "homepage": "https://github.com/vueller/validator",
  "bugs": {
    "url": "https://github.com/vueller/validator/issues"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:core": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/core/",
    "test:rules": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/rules/",
    "test:vue": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/vue/",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/integration/",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --ci --coverage --watchAll=false",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "prepublishOnly": "npm run build",
    "docs:dev": "cd docs && npm run dev",
    "docs:build": "cd docs && npm run build",
    "docs:preview": "cd docs && npm run preview"
  },
  "keywords": [
    "validation",
    "vue3",
    "react",
    "angular",
    "forms",
    "validator",
    "reactive",
    "i18n",
    "javascript",
    "universal",
    "multi-framework",
    "blur-validation",
    "input-validation",
    "auto-validation",
    "real-time"
  ],
  "author": "Vueller",
  "license": "MIT",
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "jest": "^29.0.0",
    "rollup": "^3.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-vue": "^6.0.0"
  }
}
